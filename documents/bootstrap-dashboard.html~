		<!--Load the AJAX API-->
		<script type="text/javascript" src="https://www.google.com/jsapi"></script>
		<script type="text/javascript">
			var data, options, chart;
			google.load('visualization', '1', {packages: ['corechart', 'line']});
			google.setOnLoadCallback(drawBackgroundColor);

			function drawBackgroundColor() {
				data = new google.visualization.DataTable();
				data.addColumn('datetime', 'Time of Today');
				data.addColumn('number', 'Temp');
				data.addColumn('number', 'Humidity');
				data.addRows([{{row}}]);

				options = {
					width: 900,
					height: 500,
					legend: {position: 'none'},
					enableInteractivity: true,
					chartArea: {
					  width: '85%'
					},
					hAxis: {
						gridlines: {
							count: -5,
							units: {
								days: {format: ["MMM dd"]},
								hours: {format: ["HH:mm", "ha"]},
							}
						},
						minorGridlines: {
							units: {
								hours: {format: ["hh:mm:ss a", "ha"]},
								minutes: {format: ["HH:mm a Z", ":mm"]}
							}
						}
					}
				};
			}
			window.onload = function(){
				chart = new google.visualization.LineChart(document.getElementById('chart_div'));
				chart.draw(data, options);
				setInterval(updateGraph, 10000);
			}
			function updateGraph(){
				var xhr = window.XMLHttpRequest?new XMLHttpRequest():(window.ActiveXObject?new ActiveXObject("Microsoft.XMLHTTP"):false);
				if(xhr){
					xhr.onreadystatechange = function(){
						if(xhr.readyState==4 && xhr.status==200){
							var newrow = xhr.responseText;
							data.Lf.shift();
							eval("data.addRow("+newrow+")"); // replace(/\[(.*),\]/g,"$1")
							chart.draw(data, options);
							return;
						}
					};
					xhr.open("GET","?limit=1");
					xhr.send(null);
				}else{
					alert("unable to create an XMLHttpRequest");
				}
			}
		</script>

